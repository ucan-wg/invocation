type SignedInvocation struct {
  pld &Invocation
  sig &Signature
}

type Invocation struct {
  uiv SemVer

  iss DID
  aud DID

  run &Task
  cse optional &Receipt
}

type Task struct {
  run &Command
  mta {String : Any}
  prf [&Delegation]
  exp Integer
}

type Action {
  cmd Command
  arg {String : Any}
  nnc String

  sub optional DID
}
